{% extends "base.jinja" %}
{% block content %}
  <div class="col s6 center">
    <h4>{{location}} reviews</h4>
  </div>
  {% for row in reviews %}
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <div class="card red lighten-2 center">
        <div class="card-content white-text">
          <span class="card-title">Rating: {{row[0]}}</span>
          <p>{{row[1]}}</p>
        </div>
      </div>
    </div>
  </div>
  {% endfor %}
{% endblock %}
