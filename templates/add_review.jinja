{% extends "base.jinja" %}
{% block content %}
  <h5>Add Review</h5>
  <div class="row">
    <form method="post" class="col s12">
      <div class="row">
        <div class="input-field col s3">
          <br>
          <br>
          <label>Location</label>
          <select name="location" class="browser-default">
            <option value="" disabled selected>Choose your option</option>
            {% for row in locations %}
              <option value={{row[0]}}>{{row[0]}}</option>
            {% endfor %}
          </select>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s3">
          <input id="icon_prefix" type="text" name="rating" class="validate">
          <label for="icon_prefix">Rating (Less than 20 Characters)</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <textarea id="textarea1" class="materialize-textarea" name="review"></textarea>
          <label for="textarea1">Review</label>
        </div>
      </div>
      <div class="row">
        <button class="btn waves-effect waves-light" type="submit">Submit
          <i class="material-icons right">send</i>
        </button>
      </div>
    </form>
  </div>
{% endblock %}
