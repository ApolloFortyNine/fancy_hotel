{% extends "base.jinja" %}
{% block content %}
  <h5>Update Reservation</h5>
  <br>
  <div class="row">
    <div class="col s3">
      <p>Current Start Date: {{curr_start_date}}</p>
    </div>
    <div class="col s3">
      <p>Current End Date: {{curr_end_date}}</p>
    </div>
  </div>
  <div class="row">
    <form method="post" class="col s12" action="/update_results">
      <div class="row">
        <div class="input-field col s3">
          <input id="icon_prefix" type="text" name="new_start_date" class="validate">
          <label for="icon_prefix">New Start Date</label>
        </div>
        <div class="input-field col s3">
          <input id="icon_prefix" type="text" name="new_end_date" class="validate">
          <label for="icon_prefix">New End Date</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <button class="btn waves-effect waves-light" type="submit" name="reservation_id" value="{{reservation_id}}">Submit
            <i class="material-icons right">send</i>
          </button>
        </div>
      </div>
    </form>
  </div>
{% endblock %}
